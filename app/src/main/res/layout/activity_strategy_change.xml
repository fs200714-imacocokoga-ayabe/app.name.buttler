<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrategyChangeActivity">

    // 作戦の表示
    <TextView
        android:id="@+id/text_strategy_id"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/frame_line_03"
        android:gravity="center"
        android:text="@string/text_strategy"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    // 決定のボタン

    <Button
        android:id="@+id/strategy_determination_button_id"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/frame_line_02"
        android:text="@string/strategy_determination_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/text_strategy_id"
        app:layout_constraintTop_toTopOf="@+id/text_strategy_id" />

    <TextView
        android:id="@+id/text_strategy_choice_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_strategy_choice"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_strategy_id" />

    <RadioGroup
        android:id="@+id/radiogrupe_strategy_id"
        android:layout_width="380dp"
        android:layout_height="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_strategy_choice_id">

        <RadioButton
            android:id="@+id/radiobutton_strategy01"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="仮ガンガンいこうぜ"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radiobutton_strategy02"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="仮いのちだいじに"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radiobutton_strategy03"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="仮バッチリがんばれ"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radiobutton_strategy04"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="仮魔法優先"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radiobutton_strategy05"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="仮魔法つかうな"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>