<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrategyChangeActivity">

    // 作戦の表示
    <TextView
        android:id="@+id/text_strategy_id"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/frame_line_03"
        android:gravity="center"
        android:text="@string/text_strategy"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    // 決定のボタン

    <Button
        android:id="@+id/strategy_determination_button_id"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/frame_line_02"
        android:text="@string/strategy_determination_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/text_strategy_id"
        app:layout_constraintTop_toTopOf="@+id/text_strategy_id" />

    <TextView
        android:id="@+id/text_strategy_choice_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_strategy_choice"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_strategy_id" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_strategy_choice_id">

        <RadioGroup
            android:id="@+id/radio_grupe_strategy_id"
            android:layout_width="30dp"
            android:layout_height="300dp" >

            <TextView
                android:id="@+id/padding_gap_text01_id"
                android:layout_width="30dp"
                android:layout_height="15dp" />

            <RadioButton
                android:id="@+id/radiobutton_strategy01"
                style="@style/MyRadioButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_radio_button_custom"/>

            <TextView
                android:id="@+id/padding_gap_text02_id"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <RadioButton
                android:id="@+id/radiobutton_strategy02"
                style="@style/MyRadioButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/selector_radio_button_custom"/>

            <TextView
                android:id="@+id/padding_gap_text03_id"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <RadioButton
                android:id="@+id/radiobutton_strategy03"
                style="@style/MyRadioButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/selector_radio_button_custom"/>

            <TextView
                android:id="@+id/padding_gap_text04_id"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <RadioButton
                android:id="@+id/radiobutton_strategy04"
                style="@style/MyRadioButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/selector_radio_button_custom"/>

            <TextView
                android:id="@+id/padding_gap_text05_id"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <RadioButton
                android:id="@+id/radiobutton_strategy05"
                style="@style/MyRadioButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/selector_radio_button_custom"/>

            <TextView
                android:id="@+id/padding_gap_text06_id"
                android:layout_width="30dp"
                android:layout_height="15dp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:text="@string/radiobutton_strategy01_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:buttonTint="@color/colorBlue"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:text="@string/radiobutton_strategy02_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:buttonTint="@color/colorBlue"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:text="@string/radiobutton_strategy03_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:buttonTint="@color/colorBlue"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:text="@string/radiobutton_strategy04_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:buttonTint="@color/colorBlue"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:text="@string/radiobutton_strategy05_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:buttonTint="@color/colorBlue"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>