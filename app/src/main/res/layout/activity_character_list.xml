<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterListActivity">

    <TextView
        android:id="@+id/text_characterlist_a"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/text_frame_line"
        android:gravity="center"
        android:text="@string/text_characterlist_a"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_01_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/characterlist_back_button"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_during_return_button_frame"
        android:text="@string/characterlist_back_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/text_characterlist_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/characterlist_01_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_01_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_02_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_characterlist_a" />

    <Button
        android:id="@+id/characterlist_02_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_01_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_03_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_01_button" />

    <Button
        android:id="@+id/characterlist_03_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_03_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_04_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_02_button" />

    <Button
        android:id="@+id/characterlist_04_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_04_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_05_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_03_button" />

    <Button
        android:id="@+id/characterlist_05_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_05_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_06_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_04_button" />

    <Button
        android:id="@+id/characterlist_06_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_06_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_07_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_05_button" />

    <Button
        android:id="@+id/characterlist_07_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_07_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_08_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_06_button" />

    <Button
        android:id="@+id/characterlist_08_button"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_frame_line"
        android:text="@string/characterlist_08_button"
        app:layout_constraintBottom_toTopOf="@+id/characterlist_newcreate_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_07_button" />

    <Button
        android:id="@+id/characterlist_newcreate_button"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/new_create_button_frame"
        android:text="@string/characterlist_newcreate_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterlist_08_button" />

</androidx.constraintlayout.widget.ConstraintLayout>