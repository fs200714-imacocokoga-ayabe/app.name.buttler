<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/data_character_status_id"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@drawable/frame_line_01"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_character_name_text_id"
                android:layout_width="300dp"
                android:layout_height="33dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/data_character_job_text_id"
                android:layout_width="109dp"
                android:layout_height="33dp"
                android:text=""
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_character_hp_text_id"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/data_character_mp_text_id"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="" />

            <TextView
                android:id="@+id/data_character_str_text_id"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="" />

            <TextView
                android:id="@+id/data_character_def_text_id"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="" />

            <TextView
                android:id="@+id/data_character_agi_text_id"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>