<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="66dp"
        android:background="@drawable/frame_line_01"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:splitMotionEvents="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/textView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="" />

            <RadioButton
                android:id="@+id/data_party_organization_radio_button_id"
                style="@style/MyRadioButton"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_button_custom"
                android:checked="false"
                android:onClick="radioCheck"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/data_party_organization_character_name_id"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/data_party_organization_character_job_id"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="" />

            <TextView
                android:id="@+id/data_party_organization_character_hp_id"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/data_party_organization_character_mp_id"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/data_party_organization_character_str_id"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/data_party_organization_character_def_id"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/data_party_organization_character_agi_id"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="52dp"
                android:layout_height="31dp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>